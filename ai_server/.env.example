# AI Server Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo

# Gemini AI Configuration (Primary - Required)
# Get your API keys from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY_1=your_primary_gemini_api_key_here
GEMINI_API_KEY_2=your_backup_gemini_api_key_here
GEMINI_API_KEY_3=your_third_gemini_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=True

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,txt,docx

# API Key Sources:
# OpenAI: https://platform.openai.com/api-keys
# Gemini: https://makersuite.google.com/app/apikey

# Note: The application uses Gemini API keys for AI processing
# Multiple keys provide redundancy and higher rate limits
